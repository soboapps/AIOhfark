                android:key="scoreOnePairPref" />
                
        <ListPreference
                android:title="@string/stSinglePair"
                android:summary="@string/stSinglePairPoints"
                android:key="onePairPref"
                android:defaultValue="100"
                android:entries="@array/onepair_Array"
                android:entryValues="@array/onepair_Array"
